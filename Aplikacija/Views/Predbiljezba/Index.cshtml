@model IEnumerable<Aplikacija.Models.Seminar>

@{
    ViewBag.Title = "Index";
}

<br /> <br />

@using (Html.BeginForm("Index", "Predbiljezba", FormMethod.Post))

{
    <div class="row form-group">
        <div class="col-md-1">
            <label>Pretraga:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBox("naziv", null, new { @class = "form-control", @placeholder = "Pretraga" })
        </div>
        <button type="submit" class="btn btn-default">Pretraži</button>
    </div>
}


<br /> <br />

<table class="table table-bordered">
    <tr>
        <td></td>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Predavac)
        </th>
    </tr>

    @foreach (var item                                                                                                                                                                                      in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Odaberi", "Predbiljezba", new { id = item.IdSeminar })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predavac)
            </td>
        </tr>
    }

</table>
