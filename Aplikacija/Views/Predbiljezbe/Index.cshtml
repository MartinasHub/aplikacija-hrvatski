@model IEnumerable<Aplikacija.Models.Predbiljezba>

<br /> <br />

@using (Html.BeginForm("Index", "Predbiljezbe", FormMethod.Post))

{
    <div class="row form-group">
        <div class="col-md-1">
            <label>Pretraga:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBox("naziv", null, new { @class = "form-control", @placeholder = "Pretraga" })
        </div>
        <button type="submit" class="btn btn-default">Pretraži</button>
    </div>
}

<br /> <br />

<table class="table table-bordered">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Seminar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { id = item.IdPredbiljezba })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seminar.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }

</table>