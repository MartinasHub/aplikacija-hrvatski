@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Odjava", "Prijava", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Prijava", "Prijava", "Prijava", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
